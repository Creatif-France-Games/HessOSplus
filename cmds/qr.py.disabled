import qrcode

def run(args):
    if not args:
        print("Usage: qr <text or url>")
        return

    data = " ".join(args)
    qr = qrcode.QRCode()
    qr.add_data(data)
    qr.make()

    qr_matrix = qr.get_matrix()
    for row in qr_matrix:
        line = ''.join(['██' if cell else '  ' for cell in row])
        print(line)
